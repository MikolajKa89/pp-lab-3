pakiet pakietglowny;

import geometria.Kolo;
import geometria.KolowyKolorowy;

public class Glowna {
    public static void main(String[] args) {
        // Tworzenie tablicy Circle i ColoredCircle
        Kolo[] kola = new Kolo[3];
        kola[0] = new Kolo(3.0);
        kola[1] = new KolowyKolorowy(5.0, "niebieski");
        kola[2] = new Kolo(2.5);

        // Iteracja po tablicy i calculateArea()
        for (Kolo kolo : kola) {
            System.out.println("Pole: " + kolo.obliczPole());
            
            // Jeśli obiekt jest instancją KolowyKolorowy, wywołaj pobierzKolor()
            if (kolo instanceof KolowyKolorowy) {
                KolowyKolorowy kolowyKolorowy = (KolowyKolorowy) kolo;
                System.out.println("Kolor: " + kolowyKolorowy.pobierzKolor());
            }
        }
    }
}
