package mainpackage;

import geometry.Circle;
import geometry.ColoredCircle;

public class Main {
    public static void main(String[] args) {
        // Tworzenie tablicy  Circle i ColoredCircle
        Circle[] circles = new Circle[3];
        circles[0] = new Circle(3.0);
        circles[1] = new ColoredCircle(5.0, "blue");
        circles[2] = new Circle(2.5);

        // Iteracja po tablicy y calculateArea()
        for (Circle circle : circles) {
            System.out.println("Area: " + circle.calculateArea());
            
            // Jeśli obiekt jest instancją ColoredCircle,  getColor()
            if (circle instanceof ColoredCircle) {
                ColoredCircle coloredCircle = (ColoredCircle) circle;
                System.out.println("Color: " + coloredCircle.getColor());
            }
        }
    }
}
